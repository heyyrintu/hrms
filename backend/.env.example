# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hrms_db"

# JWT - IMPORTANT: Generate a strong random secret for production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# App
PORT=3001
NODE_ENV=development

# CORS - Comma-separated list of allowed origins
CORS_ORIGIN="http://localhost:3000"

# Default tenant for single-tenant or development mode
DEFAULT_TENANT_ID="dev-tenant-001"

# Logging
LOG_LEVEL="debug"

# Storage - "local" or "s3"
STORAGE_TYPE="local"
STORAGE_LOCAL_PATH="./uploads"
# AWS_S3_BUCKET=""
# AWS_S3_REGION=""
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# Email (SMTP) - optional, emails logged to console if not configured
# SMTP_HOST=""
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASS=""
# SMTP_FROM="HRMS <noreply@yourcompany.com>"

# Redis - set REDIS_ENABLED=true to enable background jobs (BullMQ)
# Without Redis, the app runs fine but background job features are disabled
REDIS_ENABLED=false
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""
